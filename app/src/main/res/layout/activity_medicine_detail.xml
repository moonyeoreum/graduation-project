<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MedicineDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="338dp"
            android:layout_height="269dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <!-- 의약품 이름 -->
        <TextView
            android:id="@+id/itemNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="의약품 이름"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 제조사 -->
        <TextView
            android:id="@+id/entpNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="제조사"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/entpNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- 분류(etcOtcCode) -->
        <TextView
            android:id="@+id/etcOtcCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="분류"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etcOtcCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- 용법 및 용량 -->
        <TextView
            android:id="@+id/useMethodQesitmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="용법 및 용량"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useMethodQesitmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- 주의 사항 -->
        <TextView
            android:id="@+id/atpnQesitmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="주의 사항"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/atpnQesitmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- 정보 확인 버튼 -->
        <Button
            android:id="@+id/informationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFC107"
            android:text="정보 확인"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 알람 설정 버튼 -->
        <Button
            android:id="@+id/alarmButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="알람 설정"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

