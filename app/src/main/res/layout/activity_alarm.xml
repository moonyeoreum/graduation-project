<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <!--  현재 시간을 표시하는 텍스트뷰  -->
    <TextView android:id="@+id/tvCurrentTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="현재 시간: " android:layout_centerHorizontal="true" android:layout_marginTop="50dp"/>
    <!--  알람 추가 버튼  -->
    <Button android:id="@+id/btnAddAlarm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="알람 추가" android:layout_below="@id/tvCurrentTime" android:layout_centerHorizontal="true" android:layout_marginTop="20dp"/>
    <!--  알람 리스트를 표시하는 리스트뷰  -->
    <ListView android:id="@+id/listViewAlarms" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/btnAddAlarm" android:layout_marginTop="20dp"/>
</RelativeLayout>
